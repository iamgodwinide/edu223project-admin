<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid bg-white p-3">
            <h2 class="mb-2">
                <%= student.firstname%>
                    <%= student.lastname%>'s Profile
            </h2>

            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <strong>Basic Info</strong>
                        </div>
                        <div class="card-body card-block">
                            <form method="post">
                                <%- include("./partials/messages") %>
                                    <div class="form-group">
                                        <label for="fname" class=" form-control-label">First Name</label>
                                        <input type="text" name="firstname" id="fname" placeholder="Enter first name"
                                            class="form-control" value="<%= student.firstname %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="middlename" class=" form-control-label">Middle Name</label>
                                        <input type="text" name="middlename" id="middlename"
                                            placeholder="Enter middle name" class="form-control"
                                            value="<%= student.middlename %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="lastname" class=" form-control-label">Last Name</label>
                                        <input type="text" name="lastname" id="lastname" placeholder="Enter last name"
                                            class="form-control" value="<%= student.lastname %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="matno" class=" form-control-label">Mat Number</label>
                                        <input type="text" name="matno" id="matno" placeholder="Enter Mat Number"
                                            class="form-control" value="<%= student.matno %>" required readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="matno" class=" form-control-label">Level</label>
                                        <select class="form-control" required name="level">
                                            <option value="<%= student.level %>">select</option>
                                            <option value="100">100</option>
                                            <option value="200">200</option>
                                            <option value="300">300</option>
                                            <option value="400">400</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="phone" class=" form-control-label">Phone Number</label>
                                        <input type="number" name="phone" id="phone" placeholder="Enter Phone Number"
                                            class="form-control" value="<%= student.phone %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class=" form-control-label">Email</label>
                                        <input type="text" name="email" id="email" placeholder="Enter email ID"
                                            class="form-control" value="<%= student.email %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class=" form-control-label">Password(Enter to change)</label>
                                        <input type="password" name="password" id="email"
                                            placeholder="Enter password to update" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-success">Update</button>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <strong>Results</strong>
                        </div>
                        <div class="card-body card-block">
                            <div class="table-responsive table--no-card m-b-40 p-3">
                                <table class="table table-borderless table-striped table-earning" id="students">
                                    <thead>
                                        <tr>
                                            <th class="text-left">Session</th>
                                            <th class="text-left">Semester</th>
                                            <th class="text-left">Grades</th>
                                            <th class="text-left">CGPA</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% results.map(r=> {%>
                                            <tr>
                                                <td class="text-left">
                                                    <%= r[0].session %>
                                                </td>
                                                <td class="text-left" style="text-transform: capitalize;">
                                                    <%= r[0].semester %>
                                                </td>
                                                <td class="text-left">
                                                    <ul>
                                                        <% r.map(re=> {%>
                                                            <li>
                                                                <%= re.course%>
                                                                    <%= re.grade%>(<%= re.score%>)
                                                            </li>
                                                            <%})%>
                                                    </ul>
                                                </td>
                                                <td class="text-left">
                                                    <%= calculate_gpa(r) %>
                                                </td>
                                            </tr>
                                            <%})%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="col-lg-12">
                        <h3 class="text-danger mb-3">Danger</h3>
                        <div class="row">
                            <a href="/delete-student/<%=student._id%>" class="btn btn-danger">
                                <i class="fas fa-trash"> </i>
                                Delete Account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>