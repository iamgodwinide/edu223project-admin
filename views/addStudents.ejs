<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h2 class="mb-2">Register Students</h2>

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <strong>Register A Single Student</strong>
                        </div>
                        <div class="card-body card-block">
                            <form action="/add-one-student" method="post" autocomplete="off">
                                <%- include("./partials/messages") %>
                                    <input autocomplete="off" name="hidden" type="text" style="display:none;">
                                    <div class="form-group">
                                        <label for="fname" class=" form-control-label">First Name</label>
                                        <input value="<%= typeof firstname !== 'undefined' ? firstname : ''%>"
                                            type="text" name="firstname" id="fname" placeholder="Enter first name"
                                            class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="middlename" class=" form-control-label">Middle Name</label>
                                        <input value="<%= typeof middlename !== 'undefined' ? middlename : ''%>"
                                            type="text" name="middlename" id="middlename"
                                            placeholder="Enter middle name" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="lastname" class=" form-control-label">Last Name</label>
                                        <input value="<%= typeof lastname !== 'undefined' ? lastname : ''%>" type="text"
                                            name="lastname" id="lastname" placeholder="Enter last name"
                                            class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="matno" class=" form-control-label">Mat Number</label>
                                        <input value="<%= typeof matno !== 'undefined' ? matno : ''%>" type="text"
                                            name="matno" id="matno" placeholder="Enter Mat Number" class="form-control"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label for="dept" class=" form-control-label">Department</label>
                                        <select class="form-control" name="department" required>
                                            <option value="">select</option>
                                            <option value="ADT">ADT</option>
                                            <option value="CIT">CIT</option>
                                            <option value="DEF">DEF</option>
                                            <option value="DEM">DEM</option>
                                            <option value="EECP">EECP</option>
                                            <option value="HSE">HSE</option>
                                            <option value="HKS">HKS</option>
                                            <option value="VTE">VTE</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="matno" class=" form-control-label">Level</label>
                                        <select class="form-control" name="level" required>
                                            <option value="">select</option>
                                            <option value="100">100</option>
                                            <option value="200">200</option>
                                            <option value="300">300</option>
                                            <option value="400">400</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="phone" class=" form-control-label">Phone Number</label>
                                        <input value="<%= typeof phone !== 'undefined' ? phone : ''%>" type="number"
                                            name="phone" id="phone" placeholder="090...." class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class=" form-control-label">Email</label>
                                        <input value="<%= typeof email !== 'undefined' ? email : ''%>" type="text"
                                            name="email" id="email" placeholder="Enter email ID" class="form-control"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class=" form-control-label">Password</label>
                                        <input value="<%= typeof password !== 'undefined' ? password : ''%>"
                                            autocomplete="false" type="text" name="password" id="email"
                                            placeholder="Enter password to update" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-success">Register</button>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <%- include("./partials/messages") %>
                            <div class="card-header">
                                <strong>Register Multiple Students Through A CSV FILE</strong>
                            </div>
                            <div class="card-body card-block">
                                <form method="post" action="/add-many-students" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label for="dept" class=" form-control-label">Department</label>
                                        <select class="form-control" name="department" required>
                                            <option value="">select</option>
                                            <option value="ADT">ADT</option>
                                            <option value="CIT">CIT</option>
                                            <option value="DEF">DEF</option>
                                            <option value="DEM">DEM</option>
                                            <option value="EECP">EECP</option>
                                            <option value="HSE">HSE</option>
                                            <option value="HKS">HKS</option>
                                            <option value="VTE">VTE</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="matno" class=" form-control-label">Level</label>
                                        <select class="form-control" name="level" required>
                                            <option value="">select</option>
                                            <option value="100">100</option>
                                            <option value="200">200</option>
                                            <option value="300">300</option>
                                            <option value="400">400</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="csv" class=" form-control-label">CSV File</label>
                                        <br />
                                        <small>csv file must include the following headings:
                                            <b>firstname</b>,
                                            <b>lastname</b>,
                                            <b>middlename</b>,
                                            <b>matno</b>,
                                            <b>email</b>,
                                            <b>phone</b>,
                                            <b>password</b>,
                                            all lowercase as seen
                                            and must be saved as a <b>CSV(comma delimited)</b> file.</small>
                                        <input type="file" name="csv" id="csv" placeholder="file" class="form-control"
                                            accept="text/csv">
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-success">Register All</button>
                                    </div>
                                </form>
                            </div>
                    </div>
                    <hr>
                    <div class="col-lg-12">
                        <h3 class="text-danger mb-3">Danger</h3>
                        <div class="row">
                            <a href="/" class="btn btn-warning mr-5">
                                <i class="fas fa-user-times"></i>
                                Disable Account</a>
                            <br>
                            <a href="/" class="btn btn-danger">
                                <i class="fas fa-trash"> </i>
                                Delete Account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>